{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",       // <-- Tells TSC where to put compiled files
    "rootDir": "./src",       // <-- Specifies the root of your source files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
    // Make sure "noEmit": true is NOT in here
  },
  "include": ["src/**/*"] // <-- Tells TSC which files to compile
}